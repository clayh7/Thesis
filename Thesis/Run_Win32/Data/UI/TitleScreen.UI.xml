	<UIWidget name="titleScreen">
		<UIBox>
			<Width value="1600"/>
			<Height value="900"/>
			<BackgroundColor value="0,0,0,255"/>
		</UIBox>
		
		<!-------------------------------------------------------------------------------------------->
		<UIButton name="dedicatedHostButton">
			<Text value="Dedicated Server"/>
			<OnPressed value="DedicatedHostEvent"/>
			<Offset value="0,220"/>
			<Width value="300"/>
			<Sound value="ui_highlighted.wav" state="highlighted"/>
			<Sound value="ui_pressed.wav" state="pressed"/>
		</UIButton>


		<!-------------------------------------------------------------------------------------------->
		<UITextField name="usernameField">
			<Hint value="Username"/>
			<Offset value="0,160"/>
			<SelectedColor value="0,128,0,255"/>
			<Width value="300"/>
		</UITextField>

		<!-------------------------------------------------------------------------------------------->
		<UITextField name="passwordField">
			<Password/>
			<Hint value="Password"/>
			<Offset value="0,100"/>
			<SelectedColor value="0,128,0,255"/>
			<Width value="300"/>
		</UITextField>

		<!-------------------------------------------------------------------------------------------->
		<UIButton name="hostButton">
			<Text value="Listen Server"/>
			<OnPressed value="HostGameEvent"/>
			<Offset value="0,0"/>
			<Width value="300"/>
			<Sound value="ui_highlighted.wav" state="highlighted"/>
			<Sound value="ui_pressed.wav" state="pressed"/>
		</UIButton>

		<!-------------------------------------------------------------------------------------------->
		<UITextField name="addressField">
			<Hint value="IP Address..."/>
			<Offset value="0,-100"/>
			<SelectedColor value="0,128,0,255"/>
			<Width value="300"/>
		</UITextField>

		<!-------------------------------------------------------------------------------------------->
		<UIButton name="joinButton">
			<Text value="Join Server"/>
			<OnPressed value="JoinGameEvent"/>
			<Offset value="0,-160"/>
			<Width value="300"/>
			<Sound value="ui_highlighted.wav" state="highlighted"/>
			<Sound value="ui_pressed.wav" state="pressed"/>
		</UIButton>

